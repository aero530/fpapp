import { ScrollView } from "sixtyfps_widgets.60";
import { Palette, Page, SpinBox, ComboBox, CheckBox, Label, AccountData } from "common.60";

export SsaPage := Page {
    property<[AccountData]> accounts;
    property<float> scale : 0.5;
    
    header: "SSA";

    ScrollView {
        min-width: 500px;
        height: root.height;
        viewport-width: 500px;
        viewport-height : 1200 * scale * accounts.length * 1px;
        for account[i] in accounts: Image {
            x: 10px;
            y: account.graph.height * scale * i * 1px;
            width: account.graph.width * scale * 1px;
            height: account.graph.height * scale * 1px;
            source: account.graph;
        }
    }

}
