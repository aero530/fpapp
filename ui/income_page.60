import { ListView, LineEdit, SpinBox } from "sixtyfps_widgets.60";
import { Palette, Page, SpinBox, ComboBox, CheckBox, Label, AccountData, IncomeData } from "common.60";

export IncomePage := Page {
    property<[IncomeData]> accounts;
    property<float> scale : 0.5;

    header: "Income";

    ListView {
        min-width: 500px;
        height: root.height;
        viewport-width: 500px;
        for account[i] in accounts: HorizontalLayout {
            x: 10px;
            spacing: 20px;
            VerticalLayout {
                min-height: 50px;
                min-width: 200px;
                //background: #999999;
                Text {
                    text: account.input.name;
                    color: #0000FF;
                }
                account-name := LineEdit {
                    //width: parent.width;
                    height: 20px;
                    text: account.input.name;
                    placeholder-text: "Name";
                }
                account-base := SpinBox {
                    //width: parent.width;
                    height: 20px;
                    value: account.input.base;
                }
                account-start_in := LineEdit {
                    //width: parent.width;
                    height: 20px;
                    text: account.input.start_in;
                    placeholder-text: "Start in";
                }
                account-end_in := LineEdit {
                    //width: parent.width;
                    height: 20px;
                    text: account.input.end_in;
                    placeholder-text: "End in";
                }
                account-raise := LineEdit {
                    //width: parent.width;
                    height: 20px;
                    text: account.input.raise;
                    placeholder-text: "Raise";
                }
                account-notes := LineEdit {
                    //width: parent.width;
                    height: 20px;
                    text: account.input.notes;
                    placeholder-text: "Notes";
                }
            }
            Image {    
                width: account.graph.width * scale * 1px;
                height: account.graph.height * scale * 1px;
                source: account.graph;
            }
        }
    }
}

